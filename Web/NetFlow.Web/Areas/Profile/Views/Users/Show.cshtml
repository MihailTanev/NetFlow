@model NetFlow.Web.ViewModels.Profile.ShowUserProfileViewModel

@{
    ViewData["Title"] = "Profile";
}
<div class="container">
    <div class="col text-center">
        <h1 class="pt-3">@ViewData["Title"]</h1>
    </div>
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-6 d-flex align-items-center">
                    <div class="mx-auto">
                        @if (Model.Profile.Picture != null)
                        {
                            <img src="@Model.Profile.Picture" alt="@Model.Profile.Username" id="profilepic-show" />
                        }
                   </div>
                </div>
                <div class="col-md-6">
                    <ul class="list-group">
                        <li class="list-group-item">Id: <h6>@Model.UserId</h6></li>
                        <li class="list-group-item">Name: <h6>@Model.Profile.FirstName @Model.Profile.LastName</h6></li>
                        <li class="list-group-item">Username: <h6>@Model.Profile.Username</h6></li>
                        <li class="list-group-item">Date of Birth: <h6>@Model.Profile.BirthDate.ToString("dd/MM/yyyy")</h6></li>
                        <li class="list-group-item">Email: <h6>@Model.Profile.Email</h6></li>
                        <li class="list-group-item">Phone: <h6>@Model.Profile.PhoneNumber</h6></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="text-center">
                <a class="btn btn-outline-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Edit"><i class="fas fa-2x fa-pencil-alt"></i></a>
            </div>
        </div>
    </div>
</div>