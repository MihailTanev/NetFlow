@model NetFlow.Web.Areas.Administration.Models.UsersViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Regestered Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1 class="text-center p-3 mx-auto">@ViewData["Title"]</h1>
<div class="title-underline bg-dark"></div>
<br />

<br />
<div>
    <a asp-area="Administration" asp-controller="Users" asp-action="AddUser" class="btn btn-primary">Add User</a>
</div>
<br />
<div class="row">
    <table class="table table-striped table-bordered table-condensed table-responsive text-center">
        <thead>
            <tr>
                <th>Username</th>
                <th>Email</th>
                <th>Name</th>
                <th>Created Date</th>
                <th>Account</th>
                <th>Check Role</th>
                <th>Identity</th>
                <th>Password</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Users)
            {
                <tr>
                    <td>@user.Username</td>
                    <td>@user.Email</td>
                    <td>@user.FirstName @user.LastName</td>
                    <td>@user.CreatedOn.ToString("dd MMM yyyy, HH:mm")</td>
                    <td><a asp-area="Administration" asp-controller="Users" asp-action="Edit" asp-route-id="@user.Id" class="btn btn-warning">Edit</a></td>
                    <td><a asp-area="Administration" asp-controller="Users" asp-action="CheckRole" asp-route-id="@user.Id" class="btn btn-default">View</a></td>
                    <td><a asp-area="Administration" asp-controller="Users" asp-action="ChangeRole" asp-route-id="@user.Id" class="btn btn-primary">Add</a></td>
                    <td><a asp-area="Administration" asp-controller="Users" asp-action="ChangePassword" asp-route-id="@user.Id" class="btn btn-warning">Change</a></td>
                    <td><a asp-area="Administration" asp-controller="Users" asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>