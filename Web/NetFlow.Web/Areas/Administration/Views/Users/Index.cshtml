@model NetFlow.Web.ViewModels.Users.UsersViewModel
@using NetFlow.Common.Messages.User

@{
    ViewData["Title"] = "Regestered Users";
}

<h1 class="text-center p-3 mx-auto">@ViewData["Title"]</h1>
<div class="title-underline bg-dark"></div>
<br />

<br />


@if (this.TempData.ContainsKey(UserMessagesConstants.TEMPDATA_ERROR_MESSAGE))
{
    <div class="col-md-6 offset-3 alert alert-dismissible alert-danger text-center">
        <strong>@this.TempData[UserMessagesConstants.TEMPDATA_ERROR_MESSAGE]</strong>
    </div>
}
@if (this.TempData.ContainsKey(UserMessagesConstants.TEMPDATA_SUCCESS_MESSAGE))
{
    <div class="col-md-6 offset-3 alert alert-dismissible alert-success text-center">
        <strong>@this.TempData[UserMessagesConstants.TEMPDATA_SUCCESS_MESSAGE]</strong>
    </div>
}
<div>
    <a asp-area="Administration" asp-controller="Users" asp-action="Add" class="btn btn-primary">Add User</a>
</div>
<br />
<div class="row">
    <table class="table table-striped table-bordered table-condensed table-responsive text-center">
        <thead>
            <tr>
                <th>Username</th>
                <th>Email</th>
                <th>Name</th>
                <th>Created Date</th>
                <th>Account</th>
                <th>Roles</th>
                <th>Identity</th>
                <th>Password</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.Users)
            {
                <tr>
                    <td>@user.Username</td>
                    <td>@user.Email</td>
                    <td>@user.FirstName @user.LastName</td>
                    <td>@user.CreatedOn.ToString("dd MMM yyyy, HH:mm")</td>
                    <td><a asp-area="Administration" asp-controller="Users" asp-action="Edit" asp-route-id="@user.Id" class="btn btn-warning">Edit</a></td>
                    <td><a asp-area="Administration" asp-controller="Users" asp-action="ManageRole" asp-route-id="@user.Id" class="btn btn-default">Manage</a></td>
                    <td><a asp-area="Administration" asp-controller="Users" asp-action="Role" asp-route-id="@user.Id" class="btn btn-success">Add</a></td>
                    <td><a asp-area="Administration" asp-controller="Users" asp-action="ChangePassword" asp-route-id="@user.Id" class="btn btn-warning">Change</a></td>
                    <td><a asp-area="Administration" asp-controller="Users" asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>