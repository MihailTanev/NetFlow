@model NetFlow.Web.ViewModels.Users.ChangePasswordViewModel

@{
    ViewData["Title"] = "Change Password for" + " " + Model.Username;
}

<h2 class="text-center font-weight-bold p-3 mx-auto">@ViewData["Title"]</h2>
<div class="title-underline bg-primary"></div>

<form method="post" asp-area="Administration" asp-action="ChangePassword" asp-controller="Users">
    <div class="d-flex justify-content-center">
        <div class="col-md-4 form-group">
            <div class="d-flex justify-content-center">
                <label asp-for="Password" class="text-primary">Password</label>
            </div>
            <input type="password" asp-for="Password"
                   id="password"
                   class="form-control form-control-lg text-primary text-center" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="col-md-4 form-group">
            <div class="d-flex justify-content-center">
                <label asp-for="ConfirmPassword" class="text-primary">Confirm Password</label>
            </div>
            <input type="password" asp-for="ConfirmPassword"
                   id="confirmPassword"
                   class="form-control form-control-lg text-primary text-center" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
    </div>

    <div class="d-flex justify-content-center m-3">
        <button type="submit" class="btn btn-primary">confirm</button>
    </div>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
