@model NetFlow.Web.ViewModels.Users.RoleViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = Model.Username;
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1 class="text-center p-3 mx-auto">User Role for @ViewData["Title"] </h1>
<div class="title-underline bg-dark"></div>
<br />
<div class="row">
    <div class="col-md-6">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Username</th>
                    <th>Role</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var role in Model.Roles)
                {
                    <tr>
                        <td>@Model.Username</td>
                        <td>@role</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<a asp-area="Administration" asp-controller="Users" asp-action="Index" class="btn btn-primary">Back</a>


