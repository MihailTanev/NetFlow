@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<h1 class="text-center p-3 mx-auto">Login</h1>
<div class="title-underline bg-dark"></div>

<form asp-route-returnUrl="@Model.ReturnUrl" method="post" enctype="multipart/form-data" class="mx-auto p-3 w-25 mt-3">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="d-flex justify-content-between">
        <div class="form-group mt-3">
            <div class="d-flex justify-content-center">
                <label asp-for="Input.Username" class="text-primary">Username</label>
            </div>
            <input type="text" asp-for="Input.Username"
                   placeholder="Username"
                   id="username"
                   class="form-control form-control-lg text-primary text-center" />
            <span asp-validation-for="Input.Username" class="text-danger"></span>
        </div>
        </div>


        <div class="d-flex justify-content-between">
            <div class="form-group mt-3">
                <div class="d-flex justify-content-center">
                    <label asp-for="Input.Password" class="text-primary">Password</label>
                </div>
                <input type="password" asp-for="Input.Password"
                       id="password"
                       placeholder="Password"
                       class="form-control form-control-lg text-primary text-center" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

        </div>
   

    <div class="d-flex justify-content-center mt-3">
        <button type="submit" class="btn btn-primary">Login</button>
    </div>
    <div class="d-flex justify-content-center mt-3">
        <div class="d-flex flex-column">
            <a class="mt-2" href="/Identity/Account/Register">Register a new account</a>
        </div>
    </div>
</form>
<hr class="m-2" />

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
