@page
@model RegisterModel
@{
    ViewData["Title"] = "Create Account";
}

<div class="col text-center">
   <h1 class="pt-3">@ViewData["Title"]</h1>
   <div class="title-underline"></div>
</div>

<form asp-route-returnUrl="@Model.ReturnUrl" method="post" enctype="multipart/form-data" class="mx-auto form">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="row text-center">
        <div class="col-md-4 offset-md-2 form-group">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="far fa-user"></i></span>
                </div>
                <input asp-for="Input.FirstName" class="form-control" placeholder="First Name"/>
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4 form-group">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="far fa-user"></i></span>
                </div>
                <input asp-for="Input.LastName" class="form-control" placeholder="Last Name"/>
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row text-center">
        <div class="col-md-4 offset-md-2 form-group">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fa fa-envelope fa-envelope-custom"></i></span>
                </div>
                <input asp-for="Input.Email" class="form-control" placeholder="Email"/>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4 form-group">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                </div>
                <input asp-for="Input.Username" class="form-control" placeholder="Username"/>
                <span asp-validation-for="Input.Username" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row text-center">
        <div class="col-md-4 offset-md-2 form-group">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fa fa-lock fa-login"></i></span>
                </div>
                <input asp-for="Input.Password" class="form-control" placeholder="Password"/>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4 form-group">
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fa fa-lock fa-login"></i></span>
                </div>
                <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Confirm Password"/>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row text-center">
        <div class="offset-md-2 col-md-8 offset-md-2 form-group">
            <label asp-for="Input.Birthdate" class="control-label"></label>
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fas fa-birthday-cake"></i></span>
                </div>
                <input asp-for="Input.Birthdate" class="form-control" placeholder="Birth Date" />
            </div>
            <span asp-validation-for="Input.Birthdate" class="text-danger"></span>
        </div>
    </div>
    <div class="row text-center">
        <div class="offset-md-2 col-md-8 offset-md-2 form-group">
            <label asp-for="Input.Picture" class="control-label"></label>
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fas fa-image"></i></span>
                </div>
                <input asp-for="Input.Picture" class="form-control" />
            </div>
            <span asp-validation-for="Input.Picture" class="text-danger"></span>
        </div>
    </div>

    <br />
    <div class="form-group text-center">
        <input type="submit" value="Create Account" class="btn btn-primary" />
    </div>
    <br />
    <div class="text-center">
        <h6>Already have an account? <a href="/Identity/Account/Login" class="text-info">Sign In</a></h6>
    </div>
</form>
<hr class="m-2" />


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
