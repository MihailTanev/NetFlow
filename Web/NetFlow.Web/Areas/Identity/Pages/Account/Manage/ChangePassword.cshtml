@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<div class="col text-center">
    <h1 class="pt-3">@ViewData["Title"]</h1>
    <div class="title-underline"></div>
</div>
<br />
<div class="offset-md-3 col-md-6 offset-md-3 text-center">
    <partial name="_StatusMessage" for="StatusMessage" />
</div>

<form id="change-password-form" method="post" class="mx-auto p-3 form">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="row text-center">
        <div class="offset-md-2 col-md-8 offset-md-2 form-group">
            <label asp-for="Input.OldPassword" class="control-label"></label>
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fas fa-key"></i></span>
                </div>
                <input asp-for="Input.OldPassword" class="form-control" />
            </div>
            <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="row text-center">
        <div class="offset-md-2 col-md-8 offset-md-2 form-group">
            <label asp-for="Input.NewPassword" class="control-label"></label>
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fas fa-lock"></i></span>
                </div>
                <input asp-for="Input.NewPassword" class="form-control" />
            </div>
            <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="row text-center">
        <div class="offset-md-2 col-md-8 offset-md-2 form-group">
            <label asp-for="Input.ConfirmPassword" class="control-label"></label>
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fas fa-lock"></i></span>
                </div>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
            </div>
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>
    </div>
    <br />
    <div class="form-group text-center">
        <button type="submit" class="btn btn-primary">Update password</button>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}