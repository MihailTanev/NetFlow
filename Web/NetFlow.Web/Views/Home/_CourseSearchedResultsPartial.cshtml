@model IEnumerable<NetFlow.Services.Search.Models.SearchCourseServiceModel>

<div class="row">
    @foreach (var course in Model)
    {
        <div class="col-sm-4 col-md-4 col-md-4">
            <div class="card text-center" style="width: 18rem;">
                @if (!course.Picture.Equals(null))
                {
                    <img class="card-img-top course-image" src="@course.Picture" alt="@course.Name">
                }
                <div class="card-body">
                    <h5 class="card-title">@course.Name</h5>
                    <p class="text-center">@course.StartDate.ToString("dd MMM yyyy") - @course.EndDate.ToString("dd MMM yyyy")</p>
                    <a asp-area="" asp-controller="Course" asp-action="Details" class="btn btn-primary">Details</a>
                </div>
            </div>
        </div>
    }
</div>